<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:common="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_270sdp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/loc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/loc_dist"
                android:text="asdsafasfa"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/loc_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="fasdfsdfsdaf"
                android:textColor="#000000"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/loc_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/loc_name"
                android:text="fsdfdsfd fg fg sd dsgfd gf h"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/marker_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_toRightOf="@+id/left_layout"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

</LinearLayout>
