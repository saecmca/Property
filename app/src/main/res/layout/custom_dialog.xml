<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/block"
        android:gravity="center"
        android:minHeight="145dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/toolbar_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:src="@mipmap/logo" />

        <TextView

            android:id="@+id/tvDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fd3c98f4"
            android:gravity="center"
            android:minHeight="100dp"
            android:text="asdfasdfasdf"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
           />


    </LinearLayout>

    <TextView
        android:id="@+id/tvclose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/popup"
        android:layout_centerInParent="true"
        android:layout_marginTop="-25dp"
        android:background="@drawable/round_txt"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>


